<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/lanche_image"
        android:layout_width="75dp"
        android:layout_height="75dp"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"/>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="248dp"
        android:layout_height="46dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:orientation="vertical"
        android:padding="5dp"
        app:layout_constraintEnd_toStartOf="@+id/lanche_menu"
        app:layout_constraintStart_toEndOf="@+id/lanche_image"
        tools:layout_editor_absoluteY="16dp">

        <TextView
            android:id="@+id/lanche_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TESTE JFIDHFSHFU" />

        <TextView
            android:id="@+id/lanche_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TESTE JFIDHFSHFU" />

    </LinearLayout>

    <ImageView
        android:id="@+id/lanche_menu"
        android:layout_width="17dp"
        android:layout_height="18dp"
        android:src="@android:drawable/arrow_down_float"
        app:layout_constraintEnd_toEndOf="parent"/>

</android.support.constraint.ConstraintLayout>